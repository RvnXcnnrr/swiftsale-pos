{
  "expo": {
    "name": "SwiftSale Mobile",
    "slug": "swiftsale-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.swiftsale.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.swiftsale.mobile",
      "permissions": [
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-sqlite",
      "expo-notifications",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select product images.",
          "cameraPermission": "The app accesses your camera to let you take product photos."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SwiftSale to access your camera to take product photos."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow SwiftSale to access your photo library to select product images.",
          "savePhotosPermission": "Allow SwiftSale to save product photos to your photo library.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ]
  }
}
